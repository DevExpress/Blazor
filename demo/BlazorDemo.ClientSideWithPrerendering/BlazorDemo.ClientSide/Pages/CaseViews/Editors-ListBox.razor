@using Demo.Blazor.Model

<div class="demo-description">
    <h2>List Box - Overview</h2>
    <p>
        The List Box component allows users to select items from a list of predefined strings. The component can be bound to any IEnumerable data source. The list of items can be accessed and/or specified via the <b>SelectedItems</b> property. To track selection changes, use the <b>SelectedItemsChanged</b> event or the two-way synchronization as demonstrated in this module.
    </p>
    <p>
        In this demo, the component allows users to select only one item at a time. Select an item to see the corresponding object's property values.
    </p>
</div>

<div class="card demo-card mw-480">
    <div class="card-header">SelectedItem = <b>@(SelectedPerson == null ? "(none)" : SelectedPerson.Text)</b></div>
    <DxListBox Data="@Persons.DataSource" CssClass="border-0" style="height: 232px;"
               TextFieldName="Text"
               @bind-SelectedItems="@SelectedItems">
    </DxListBox>
</div>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted ">
        <CodeSnippet_Editors_ListBox></CodeSnippet_Editors_ListBox>
    </div>
</div>

@code {
    IEnumerable<Person> selectedItems = Persons.DataSource.Take(1);
    IEnumerable<Person> SelectedItems {
        get => selectedItems;
        set { selectedItems = value; InvokeAsync(StateHasChanged); }
    }

    Person SelectedPerson => SelectedItems.ToList()[0];
}
