<DemoPageSectionComponent Id="Navigation-Toolbar-CheckedAndRadioButtons">
    <ChildContentWithParameters Context="Params">
        @*BeginHide*@

        <div class="card w-100">
            <div class="card-header border-0 p-2 rounded">
                @*EndHide*@
                <DxToolbar>
                    <Items>
                        <DxToolbarItem GroupName="align" IconCssClass="tb-icon tb-icon-align-left" Tooltip="Align Left" />
                        <DxToolbarItem GroupName="align" IconCssClass="tb-icon tb-icon-align-center" Tooltip="Align Center" />
                        <DxToolbarItem GroupName="align" IconCssClass="tb-icon tb-icon-align-right" Tooltip="Align Right" />
                        <DxToolbarItem Text="Font Style" BeginGroup="true">
                            <Items>
                                <DxToolbarItem IconCssClass="tb-icon tb-icon-bold" Text="Bold" GroupName="bold" />
                                <DxToolbarItem IconCssClass="tb-icon tb-icon-italic" Text="Italic" GroupName="italic" />
                                <DxToolbarItem IconCssClass="tb-icon tb-icon-underline" Text="Underline" GroupName="underline" />
                            </Items>
                        </DxToolbarItem>
                    </Items>
                </DxToolbar>
                @*BeginHide*@
            </div>
        </div>
        @*EndHide*@
    </ChildContentWithParameters>
</DemoPageSectionComponent>
