<DemoPageSectionComponent Id="Editors-Calendar-MultiSelect" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        <DxCalendar EnableMultiSelect="true" SelectedDates="@GetSelectedDates()" SizeMode="Params.SizeMode" />
    </ChildContentWithParameters>

    @code {
        List<DateTime> GetSelectedDates() {
            DateTime baseDate = DateTime.Today;

            return new List<DateTime>() {
                baseDate.AddDays(-9),
                baseDate.AddDays(-5),
                baseDate.AddDays(-4),
                baseDate.AddDays(6),
                baseDate.AddDays(12),
                baseDate.AddDays(13),
                baseDate.AddDays(15)
            };
        }
    }
</DemoPageSectionComponent>
