<DemoPageSectionComponent Id="Editors-DateEdit-AdaptiveScrollPicker" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        <label for="deScrollPicker" class="demo-text cw-320 mb-1">
            Date
        </label>
        <DxDateEdit @bind-Date="@DateTimeValue"
                    PickerDisplayMode="DatePickerDisplayMode.ScrollPicker"
                    ScrollPickerFormat="dddd MMMM yyyy"
                    DisplayFormat="dd dddd MMMM yyyy"
                    SizeMode="Params.SizeMode"
                    CssClass="cw-320"
                    InputId="deScrollPicker" />
    </ChildContentWithParameters>

    @code {
        DateTime DateTimeValue { get; set; } = DateTime.Now;
    }
</DemoPageSectionComponent>
