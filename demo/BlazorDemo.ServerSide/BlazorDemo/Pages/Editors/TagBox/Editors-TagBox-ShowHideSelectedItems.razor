<DemoPageSectionComponent Id="Editors-TagBox-ShowHideSelectedItems" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        @inject WorldcitiesDataService WorldcitiesDataService

        <label for="tbCityName" class="demo-text cw-480 mb-1">
            Cities
        </label>
        <DxTagBox Data="@Data"
                  @bind-Values="@Values"
                  TextFieldName="@nameof(City.CityName)"
                  HideSelectedItems="false"
                  CssClass="cw-480"
                  SizeMode="Params.SizeMode"
                  ListRenderMode="ListRenderMode.Virtual"
                  InputId="tbCityName" />
    </ChildContentWithParameters>

    @code {
        IEnumerable<City> Data { get; set; }
        IEnumerable<City> Values { get; set; }

        protected override async Task OnInitializedAsync() {
            Data = await WorldcitiesDataService.GetCitiesAsync();
            Values = Data.Where(c => c.CityName == "New York" || c.CityName == "Los Angeles");
        }
    }
</DemoPageSectionComponent>
