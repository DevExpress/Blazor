<DemoPageSectionComponent Id="Charts-LineSeries-Line">
    <DemoChildContent>
        @switch (lineSeriesType) {
            case ChartSeriesType.Line:
                <LineChart ShowSeriesPointMarkers="showSeriesPointMarkers"
                           ShowSeriesLabels="showSeriesLabels" />
                break;
            case ChartSeriesType.StackedLine:
                <StackedLineChart ShowSeriesPointMarkers="showSeriesPointMarkers"
                                  ShowSeriesLabels="showSeriesLabels" />
                break;
            case ChartSeriesType.FullStackedLine:
                <FullStackedLineChart ShowSeriesPointMarkers="showSeriesPointMarkers"
                                      ShowSeriesLabels="showSeriesLabels" />
                break;
        }
    </DemoChildContent>

    <OptionsContent>
        <OptionComboBox Label="Series Type:"
                        T="ChartSeriesType"
                        TData="KeyValuePair<string, ChartSeriesType>"
                        Data="lineSeriesTypes"
                        ValueField="Value"
                        TextField="Key"
                        @bind-Value="lineSeriesType" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesPointMarkers"
                        Label="Show Point Markers" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesLabels"
                        Label="Show Point Labels" />
    </OptionsContent>

    @code {
        static readonly Dictionary<string, ChartSeriesType> lineSeriesTypes = new () {
            { "Line", ChartSeriesType.Line },
            { "Stacked Line" , ChartSeriesType.StackedLine},
            { "Full Stacked Line", ChartSeriesType.FullStackedLine}
        };

        ChartSeriesType lineSeriesType = lineSeriesTypes.First().Value;
        bool showSeriesPointMarkers = false;
        bool showSeriesLabels = false;
    }
</DemoPageSectionComponent>
