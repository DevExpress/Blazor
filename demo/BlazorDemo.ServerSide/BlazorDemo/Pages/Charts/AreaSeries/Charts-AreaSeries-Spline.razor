<DemoPageSectionComponent Id="Charts-AreaSeries-Spline">
    <ChildContent>
        @switch (splineAreaSeriesType) {
            case ChartSeriesType.SplineArea:
                <SplineAreaChart ShowSeriesLabels=showSeriesLabels
                                 ShowSeriesPointMarkers=showSeriesPointMarkers />
                break;
            case ChartSeriesType.StackedSplineArea:
                <StackedSplineAreaChart ShowSeriesLabels=showSeriesLabels
                                        ShowSeriesPointMarkers=showSeriesPointMarkers />
                break;
            case ChartSeriesType.FullStackedSplineArea:
                <FullStackedSplineAreaChart ShowSeriesLabels=showSeriesLabels
                                            ShowSeriesPointMarkers=showSeriesPointMarkers />
                break;

        }
    </ChildContent>

    <OptionsContent>
        <OptionComboBox Label="Series Type:"
                        T="ChartSeriesType"
                        TData="KeyValuePair<string, ChartSeriesType>"
                        Data="splineAreaSeriesTypes"
                        ValueField="Value"
                        TextField="Key"
                        @bind-Value="splineAreaSeriesType" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesPointMarkers"
                        Label="Show Point Markers" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesLabels"
                        Label="Show Point Labels" />
    </OptionsContent>

    @code {
        static readonly Dictionary<string, ChartSeriesType> splineAreaSeriesTypes = new() {
            { "Spline Area", ChartSeriesType.SplineArea },
            { "Stacked Spline Area", ChartSeriesType.StackedSplineArea },
            { "Full Stacked Spline Area", ChartSeriesType.FullStackedSplineArea }
        };

        ChartSeriesType splineAreaSeriesType = splineAreaSeriesTypes.First().Value;
        bool showSeriesPointMarkers = false;
        bool showSeriesLabels = false;
    }
</DemoPageSectionComponent>
