@inherits DemoWithResizableComponent

<div class="demo-description" id="Password">
    <h2><DemoNavLink Link="TextBox#Password" />Text Box - Password</h2>
    <p>
        The <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.DxTextBox">Text Box</a> allows you to mask all characters typed into the editor.
        Set the <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.Base.DxTextBoxBase.Password">Password</a> property to <b>true</b> to activate the password mode.
    </p>
</div>

<div class="card demo-card demo-card-shadow">
    <div class="card-header">
        <DemoToolbar @bind-SelectedSize="SizeMode" Title="Enter a password"/>
    </div>
    <div class="card-body mw-480">
        <DxTextBox @bind-Text="@TextValue" Password="true" SizeMode="SizeMode"></DxTextBox>
    </div>
</div>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted ">
        <CodeSnippet_Editor_TextBox_Password></CodeSnippet_Editor_TextBox_Password>
    </div>
</div>

@code {
    string textValue = string.Empty;
    string TextValue { get => textValue; set { textValue = value; InvokeAsync(StateHasChanged); } }
}
